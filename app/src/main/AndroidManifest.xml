<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.termproject.simsim">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Simsim">
        <activity android:name="com.termproject.simsim.ChatEnterActivity"></activity>
        <activity android:name="com.termproject.simsim.ChatActivity" />
        <activity android:name="com.termproject.simsim.SettingActivity" />
        <activity android:name="com.termproject.simsim.HomeActivity" />
        <activity android:name="com.termproject.simsim.RegisterActivity" />
        <activity android:name="com.termproject.simsim.LoginActivity" />
        <activity android:name="com.termproject.simsim.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>